<body class="container">

<header>
    <%- include ("../fragmente/header") %>
</header>

<main>
    <div class="afisaj">
        <h1>Inregistrare client nou</h1>
		</p>
		<% if(!locals.rsstatus) { %>
		<form method="post" class="date">
			<p>
			<label>
				Username: <input type = "text" name = "username" value = "">
