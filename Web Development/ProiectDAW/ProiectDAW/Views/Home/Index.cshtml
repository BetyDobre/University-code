@{
    ViewBag.Title = "Home Page";
}


<div class="container">
    <h2 class="page-header" style="text-align:center">Life seems easier when you travel!</h2>
    <br />
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">

            <div class="item active">
                <img src="/images/munte.jpg" width="500" height="400" alt="Mountain view" style="width:100%;">
                <div class="carousel-caption">
                    <h3>Mountain view</h3>
                    <p>Find the best hike!</p>
                </div>
            </div>

            <div class="item">
                <img src="/images/peles.jpg" width="500" height="400" alt="Peles Castle" style="width:100%;">
                <div class="carousel-caption">
                    <h3>Peles Castle</h3>
                    <p>See places with a history!</p>
                </div>
            </div>

            <div class="item">
                <img src="/images/bucuresti.jpg" width="500" height="400" alt="Bucharest" style="width:100%;">
                <div class="carousel-caption">
                    <h3>Bucharest</h3>
                    <p>Romanian capital!</p>
                </div>
            </div>


            <div class="item">
                <img src="/images/maldive.jpg" width="500" height="400" alt="Maldive" style="width:100%;">
                <div class="carousel-caption">
                    <h3>Maldive</h3>
                    <p>Have you ever dreamed of that?</p>
                </div>
            </div>

        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <br/>
    <div class="col-md-4">
        <h2>Getting started</h2>
        <p class="lead">
            Join us and see our opportunities
        </p>
        <p><a class="btn-info" href="https://localhost:44322/Account/Login">Discover &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Get to know us</h2>
        <p class="lead">Read about our mission.</p>
        <p><a class="btn-info" href="https://localhost:44322/Home/About">Read more &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Contact</h2>
        <p>See where can you find us if you have questions .</p>
        <p><a class="btn-info" href="https://localhost:44322/Home/Contact">See more &raquo;</a></p>
    </div>
</div>
