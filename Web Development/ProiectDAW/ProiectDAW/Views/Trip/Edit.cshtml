@model ProiectDAW.Models.ViewModels.TripViewModel
@{
    ViewBag.Title = "Update the details of this trip";
}

<h2 class="page-header" style="text-align:center">@ViewBag.Title</h2>
<h2>@ViewBag.Title</h2>
<br />

@using (Html.BeginForm(actionName: "Edit", controllerName: "Trip"))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)
    <!--camp ascuns pentru a retine id-ul obiectului-->
    @Html.HiddenFor(b => b.TripId)
    <br />
    @Html.Label("Name", "Name:")
    <br />
    @Html.EditorFor(b => b.Nume, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
    @Html.ValidationMessageFor(b => b.Nume, "", new { @class = "text-danger" })
    <br />
    <br />
    @Html.Label("Location", "Location:")
    <br />
    @Html.EditorFor(b => b.Locatie, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
    @Html.ValidationMessageFor(b => b.Locatie, "", new { @class = "text-danger" })
    <br />
    <br />
    @Html.Label("Description", "Description:")
    <br />
    @Html.EditorFor(b => b.Descriere, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
    @Html.ValidationMessageFor(b => b.Descriere, "", new { @class = "text-danger" })
    <br />
    <br />
    @Html.Label("Price", "Price:")
    <br />
    @Html.EditorFor(b => b.Pret, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(b => b.Pret, "", new { @class = "text-danger" })
    <br />

    @Html.Label("Period", "Period:")
    <br />
    @Html.Label("Start date", "Start date:")
    <br />
    @Html.TextBoxFor(b => b.Data_inceput, null, new { placeholder = "Type the end date of the trip", @class = "form-control form-control-lg" })
    @Html.ValidationMessageFor(b => b.Pret, "", new { @class = "text-danger" })
    <br />
    @Html.Label("End date", "End date:")
    <br />
    @Html.TextBoxFor(b => b.Data_sfarsit, null, new { placeholder = "Type the end date of the trip", @class = "form-control form-control-lg" })
    @Html.ValidationMessageFor(b => b.Data_sfarsit, "", new { @class = "text-danger" })
    <br />
    <br />

    @Html.Label("Category", "Category:")

    @Html.EditorFor(x => x.Categories)

    <br />
    <button class="btn btn-info" type="submit">Update</button>
}